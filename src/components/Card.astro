---
import { Image } from "astro:assets"
const {image, text} = Astro.props
---

<article class="text-default text-center grid gap-10 md:hover:scale-105 transition-all duration-500">
  { image ? <Image src={image} class="md:grayscale hover:grayscale-0 transition-all duration-500 w-full mx-auto" alt="" width={368} height={310} /> : null }
  <p><slot/></p>
</article>